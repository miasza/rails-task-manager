<div class="container text-center m-5">
  <h2><%=@task.title %></h2>
  <p class='p-2'><%= @task.details %></p>
  <p class='p-2'><% if @task.completed == true %>
      <i class="far fa-check-square p-2"></i>completed
      <% else %>
      <i class="far fa-square p-2"></i>incomplete
      <% end %></p>

  <p><i class="far fa-edit p-2"></i><%= link_to "Update", edit_task_path(@task) %></p>

  <p><i class="fas fa-undo-alt p-2"></i><%= link_to "Back to list", tasks_path %></p>
</div>
