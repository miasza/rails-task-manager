<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <div class="form-inline">
    <% if !@task.new_record?%>
      <%= f.check_box :completed, class: 'form-control' %>
      <p class='p-3 m-0'><%= f.label :completed %></p>
    <% end %>
  </div>
    <%= f.submit class: 'btn btn-primary w-100' %>
<% end %>
