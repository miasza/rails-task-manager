<div class="container text-left m-5">
  <h1>My Tasks</h1>

  <ul class="list-unstyled">
    <% @tasks.each do |task| %>

     <li>
      <span class="pr-1 m-0"><% if task.completed == true %>
        <i class="far fa-check-square"></i>
        <% else %>
        <i class="far fa-square"></i>
        <% end %></span>

      <%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task), method: :delete, data: {confirm: "Really?!" } do %>
          <i class="fas fa-trash-alt p-2"></i>
        <% end %>
     </li>
    <% end %>
  </ul>

  <p><i class="fas fa-plus p-2"></i><%= link_to "Add a task", new_task_path %></p>
</div>


